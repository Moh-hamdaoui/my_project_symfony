{% extends 'base.html.twig' %}

{% block title %}{{ recette.title }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-6">
            <img src="{{ recette.image }}" class="img-fluid rounded" alt="{{ recette.title }}">
        </div>
        <div class="col-md-6">
            <h3>Description</h3>
            <p>{{ recette.description }}</p>
            <h3>Ingrédients</h3>
            <ul>
                {% for ingredient in recette.ingredients %}
                    <li>{{ ingredient }}</li>
                {% endfor %}
            </ul>
            <h3>Préparation</h3>
            <p>{{ recette.preparation }}</p>
            <a href="{{ path('recette_index') }}" class="btn btn-secondary mt-3">Retour à la liste des recettes</a>
        </div>
    </div>
    <h3>Commentaires</h3>
    <ul>
        {% for comment in recette.comments %}
            <li>
                <strong>{{ comment.user.email }}</strong> : {{ comment.text }}
            </li>
        {% else %}
            <li>Aucun commentaire pour cette recette.</li>
        {% endfor %}
    </ul>

    <a href="{{ path('recette_comment', { id: recette.id }) }}" class="btn btn-secondary">Ajouter un commentaire</a>

{% endblock %}
