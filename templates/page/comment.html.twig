{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Ajouter un commentaire pour la recette : {{ recette.title }}</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            {{ form_start(form, { 'attr': { 'class': 'form-horizontal' } }) }}
            
            <div class="form-group mb-3">
                {{ form_label(form.text, null, { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(form.text, { 'attr': { 'class': 'form-control', 'placeholder': 'Votre commentaire...' } }) }}
                {{ form_errors(form.text) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Envoyer</button>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
